 
#include <bits/stdc++.h>
 
using namespace std;
 
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        int a,b;
        cin>>a>>b;
        if(a==b) cout<<a+b;
        else if(abs(a-b)==1) cout<<a+b;
        else
        {
            int k=max(a,b);
            cout<<2*k-1;
        }
        cout<<endl; 
    }
}
